<% content_for :title, 'Unpublished - Samuel Ford' %>
<h3>Unpublished</h3>

<p>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.posted_at_formatted, edit_post_path(post) %>
        <%= post.title %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'New Post', new_post_path, class: 'btn btn-default' %>