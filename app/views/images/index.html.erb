<% content_for :title, 'Images - Samuel Ford' %>

<ul class="list-group">
<% @images.each do |image| %>
  <li class="list-group-item">
    <% if image.picture.attached? %>
      <%= image_tag image.picture.variant(resize: "100x100") %>
      <%= link_to image.name, image.picture %>
    <% else %>
      <%= image.name %>
    <% end %>
    <%= link_to 'Edit', edit_image_path(image), class: 'btn btn-default btn-sm pull-right' %>
  </li>
<% end %>
</ul>

<%= link_to 'New Image', new_image_path, class: 'btn btn-default' %>